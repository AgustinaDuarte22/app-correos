<!-- app/views/emails/new.html.erb -->
<%= form_with model: @email, url: emails_path, local: true do |form| %>
  <%= form.label :to %>
  <%= form.text_field :to, name: 'email[to]' %> 
  <br>
  <br>
  <%= form.label :from %>
  <%= form.text_field :from, name: 'email[from]' %>
  <br>
  <br>
  <%= form.label :subject %>
  <%= form.text_field :subject, name: 'email[subject]' %>
  <br>
  <br>
  <%= form.label :body %>
  <%= form.text_area :body, name: 'email[body]' %>
  <br>
  <br>
  <%= form.submit 'Enviar' %>
<% end %>
